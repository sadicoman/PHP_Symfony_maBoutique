{% extends 'base.html.twig' %}

{% block title %}Connexion

{% endblock %}

{% block body %}

	<div class="container mt-5 mb-5">
		<h1>Connexion ! âœ…</h1>

		{% if error %}
			<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<form class="mt-5" action="{{ path('app_login') }}" method="post">

			<label for="username">Votre email :</label>
			<input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}">

			<label class="mt-3" for="password">Votre mot de passe :</label>
			<input class="form-control" type="password" id="password" name="_password">

			<input type="hidden" name="_target_path" value="{{ path('app_account') }}">


			<button class="btn btn-success mt-3" type="submit">Me connecter</button>

		</form>

	</div>
	<div class="container mt-5 mb-5">
		<p>
			Vous n'avez pas de compte ?
			<a href="{{ path('app_register') }}">Inscrivez-vous !</a>
		</p>
	</div>

{% endblock %}
