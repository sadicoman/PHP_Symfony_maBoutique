{% extends 'base.html.twig' %}

{% block title %}Categorie
{% endblock %}

{% block body %}
	<div class="container mt-5 mb-5">
		<h1>Catégorie
			{{ category.name }}!</h1>
		<p>Cette catégorie contient
			{{ category.products | length }}

			produit(s).</p>
		<div class="row row-cols-1 row-cols-md-4 g-4">
			{% for product in category.products %}
				<div class="col">
					<a class="text-decoration-none" href="{{ path('app_product', {slug : product.slug } ) }}">

						<div class="card">
							<img src="/uploads/{{ product.illustration }}" class="card-img-top" alt="{{ product.name }}">
							<div class="card-body">
								<h5 class="card-title">{{ product.name }}</h5>
								<p class="card-text">{{ product.pricewt | price }}</p>
								<a href="{{ path('app_cart_add', { id : product.id }) }}" class="btn btn-primary">Add</a>
							</div>
						</div>
					</a>
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}
