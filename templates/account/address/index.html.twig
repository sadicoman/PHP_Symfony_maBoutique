{% extends 'base.html.twig' %}

{% block body %}

	<div class="container mt-5 mb-5">
		<h1>Espace membre</h1>


		<div class="row">
			<div class="col-md-3">
				{% include 'account/_menu.html.twig' %}
			</div>
			<div class="col-md-9">
				<div class="d-flex justify-content-between">
					<h2>Mes adresses</h2>
					<a class="btn btn-light" href="{{ path('app_account_address_form') }}">Ajouter une adresse</a>
				</div>

				{% if app.user.addresses | length == 0 %}
					<p>Vous n'avez pas encore enregistré d'adresse sur la boutique.</p>
				{% else %}
					<div class="row">
						{% for address in app.user.addresses %}
							<div class="col-md-4 mt-2">
								<div class="bg-light p-2 text-center">
									<strong>{{ address.firstname }}
										{{ address.lastname }}</strong>
									<p class="mb-0">{{ address.address }}</p>
									<p class="mb-0">{{ address.postal }},
										{{ address.city }}</p>
									<p class="mb-0">{{ address.country }}</p>
									<a class="small text-secondary" href="{{ path('app_account_address_form', { id: address.id }) }}">Éditer</a>
									<a class="small text-secondary" href="{{ path('app_account_address_delete', { id: address.id }) }}">Supprimer</a>
								</div>
							</div>

						{% endfor %}
					</div>
				{% endif %}
			</div>
		</div>

	{% endblock %}
